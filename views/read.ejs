<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-full bg-zinc-900 p-10 text-white">
      <nav class="mb-6">
        <a class="text-blue-500" href="/">Create A New User</a>
      </nav>
      <h1 class="text-3xl tracking-tighter mb-6">All Users</h1>
      <div class="users flex gap-5 flex-wrap">
        <% if(users.length > 0) {%> <% users.forEach((user) => { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-md">
          <div class="image w-full h-52 rounded-md bg-zinc-700 overflow-hidden">
            <div class="w-full h-full">
              <img
                class="w-full h-full object-cover object-position-top"
                src="<%= user.image %>"
                alt="image"
              />
            </div>
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h4 class="text-zinc-500 mb-6"><%= user.email %></h4>
          <div class="btns flex justify-between">
            <a class="text-zinc-300 text-md" href="/edit/<%=user._id%>"
              >Edit User</a
            >
            <a class="text-red-500 text-md" href="/delete/<%=user._id%>"
              >Delete User</a
            >
          </div>
        </div>
        <%}) %> <%} else { %>
        <h2 class="text-zinc-500">No Users Yet</h2>
        <%} %>
      </div>
    </div>
  </body>
</html>
